<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/sf_ui_display_bold"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="Помощь в оформлении"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llSubscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_rectangle_round_10_black_solid"
                android:orientation="vertical"
                android:paddingVertical="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivTopCard">

                <TextView
                    android:id="@+id/tvFio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:fontFamily="@font/sf_ui_display_bold"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Поможем оформить пропуск
на МКАД, ТТК, СК с гарантией
от аннулирования"
                    android:textColor="#fff"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_ellipse"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/sf_ui_display_light"
                    android:paddingVertical="5dp"
                    android:text="Временный пропуск в течение дня"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:drawableStart="@drawable/ic_ellipse"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/sf_ui_display_light"
                    android:paddingVertical="5dp"
                    android:text="Оплата по факту"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:drawableStart="@drawable/ic_ellipse"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/sf_ui_display_light"
                    android:paddingVertical="5dp"
                    android:text="Годовой за 14 рабочих дней"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:drawableStart="@drawable/ic_ellipse"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/sf_ui_display_light"
                    android:paddingVertical="5dp"
                    android:text="СМС информирование"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="50dp"
                android:drawableStart="@drawable/ic_call"
                android:drawablePadding="13dp"
                android:fontFamily="@font/sf_ui_display_bold"
                android:text="+7 (991) 333 48 27"
                android:textColor="#fff"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="20dp"
                android:background="#C8C7CC" />

            <TextView
                android:id="@+id/tvMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_message"
                android:drawablePadding="13dp"
                android:fontFamily="@font/sf_ui_display_bold"
                android:text="info@pass.su"
                android:textColor="#fff"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="20dp"
                android:background="#C8C7CC" />

            <TextView
                android:id="@+id/tvUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/ic_monitor"
                android:drawablePadding="13dp"
                android:fontFamily="@font/sf_ui_display_bold"
                android:text="www.pass.su"
                android:textColor="#fff"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="20dp"
                android:background="#C8C7CC" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginVertical="41dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCall"
                    android:paddingHorizontal="10dp"
                    android:drawableTint="#1FA6F1"
                    android:drawableStart="@drawable/ic_call_small_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_round_4_blue"
                    android:fontFamily="@font/sf_ui_display_light"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingVertical="13dp"
                    android:text="Позвонить"
                    android:textColor="#1FA6F1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnMail"
                    android:paddingHorizontal="10dp"
                    android:drawableTint="#1FA6F1"
                    android:drawableStart="@drawable/ic_message_small_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_round_4_blue"
                    android:fontFamily="@font/sf_ui_display_light"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingVertical="13dp"
                    android:text="Написать"
                    android:textColor="#1FA6F1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>