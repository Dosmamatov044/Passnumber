<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#000"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bknd_pass"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/sf_ui_display_bold"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="Настройка уведомлений"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <ImageView
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_rectangle_round_34_gradient_solid"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:drawableEnd="@drawable/ic_clock"
        android:drawablePadding="15dp"
        android:fontFamily="@font/sf_ui_display_bold"
        android:gravity="center_vertical"
        android:text="Время"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/topImage"
        app:layout_constraintStart_toStartOf="@id/topImage"
        app:layout_constraintTop_toTopOf="@id/topImage" />

    <TextView
        android:id="@+id/timeNotification"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_rectangle_round_6_white_solid"
        android:fontFamily="@font/sf_ui_display_light"
        android:gravity="center"
        android:text="09:00"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/topImage"
        app:layout_constraintEnd_toEndOf="@id/topImage"
        app:layout_constraintTop_toTopOf="@id/topImage" />

    <ImageView
        android:id="@+id/SecondImage"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_rectangle_round_34_gradient_solid"
        app:layout_constraintTop_toBottomOf="@id/topImage" />

    <TextView
        android:id="@+id/tvSecondImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/sf_ui_display_bold"
        android:gravity="center_vertical"
        android:text="Уведомления на email"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/SecondImage"
        app:layout_constraintTop_toTopOf="@id/SecondImage" />

    <ImageView
        android:id="@+id/switchTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_switch_off_transparent"
        app:layout_constraintBottom_toBottomOf="@id/tvSecondImage"
        app:layout_constraintEnd_toEndOf="@+id/SecondImage"
        app:layout_constraintTop_toTopOf="@id/tvSecondImage" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="27dp"
        android:background="#38383A"
        app:layout_constraintEnd_toEndOf="@id/SecondImage"
        app:layout_constraintStart_toStartOf="@id/SecondImage"
        app:layout_constraintTop_toBottomOf="@+id/tvSecondImage" />

    <TextView
        android:layout_marginTop="21dp"
        android:id="@+id/tvSecondImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/sf_ui_display_bold"
        android:gravity="center_vertical"
        android:text="Push-уведомления"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/SecondImage"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/switchBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_switch_off_transparent"
        app:layout_constraintBottom_toBottomOf="@id/tvSecondImage1"
        app:layout_constraintEnd_toEndOf="@+id/SecondImage"
        app:layout_constraintTop_toTopOf="@id/tvSecondImage1" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="25dp"
        android:background="#38383A"
        app:layout_constraintEnd_toEndOf="@id/SecondImage"
        app:layout_constraintStart_toStartOf="@id/SecondImage"
        app:layout_constraintTop_toBottomOf="@+id/tvSecondImage1" />


</androidx.constraintlayout.widget.ConstraintLayout>