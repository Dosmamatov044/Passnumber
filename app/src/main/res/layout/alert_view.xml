<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rectangle_round_10_black_solid"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvAlertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/sf_ui_display_light"
        android:paddingHorizontal="25dp"
        android:paddingVertical="12dp"
        android:text="Информация"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvAlertDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/sf_ui_display_light"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="12dp"
        android:text="Для удаления и редактирование записи\nоб автомобиле сделайте свайп влево на\nкарточке автомобиля"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/btnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:background="@drawable/ic_rectangle_round_4_blue"
        android:paddingHorizontal="55dp"
        android:paddingVertical="12dp"
        android:text="OK"
        android:textColor="@color/blue" />
</LinearLayout>